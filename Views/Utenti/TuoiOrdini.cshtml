
@{
    ViewBag.Title = "TuoiOrdini";
}

@model List<InForno.Models.Storico>

<h2>I tuoi ordini</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Numero Ordine</th>
                <th>Prodotto</th>
                <th>Quantità</th>
                <th>Prezzo</th>
                <th>Data Ordine</th>
                <th>Stato</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ordine in Model)
            {
                <tr>
                    <td>@ordine.NumeroOrdine</td>
                    <td>@ordine.Prodotto.Nome</td>
                    <td>@ordine.Quantità</td>
                    <td>@ordine.Prezzo</td>
                    <td>@ordine.DataOrdine.ToShortDateString()</td>
                    <td>@(ordine.Stato ? "Evaso" : "In attesa")</td>
                </tr>
            }
        </tbody>
    </table>

    @if (ViewBag.AllOrdersEvasi)
    {
        <p>Tutti gli ordini sono stati evasi.</p>
    }
    else
    {
        <p>Alcuni ordini sono in attesa di essere evasi.</p>
    }
}
else
{
    <p>Non ci sono ordini disponibili.</p>
}
